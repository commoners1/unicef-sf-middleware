# Production Environment Configuration Template
# Copy this file to .env and update the values

NODE_ENV=production
PORT=3000

# Database - Production
DATABASE_URL=postgresql://sfuser_prod:your_production_password@localhost:5432/sfapi_production
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=sfuser_prod
DB_PASSWORD=your_production_password
DB_DATABASE=sfapi_production

# Redis - Production
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# JWT - Production
JWT_SECRET=your-super-secure-production-jwt-secret-key
JWT_EXPIRES_IN=24h

# Salesforce API - Production
SF_BASE_ENDPOINT=https://api.salesforce.com
SF_CLIENT_ID=your_production_client_id
SF_CLIENT_SECRET=your_production_client_secret
SF_RESOURCE_API=https://api.salesforce.com/services/data/v58.0
SF_TOKEN_URL=https://api.salesforce.com/services/oauth2/token
SF_SUBSCRIPTION_KEY=your_production_subscription_key
SF_SUBSCRIPTION_PAYMENT_KEY=your_production_payment_key

# Queue Configuration - Production (High Volume)
QUEUE_NAME=sf-queue-production
SALESFORCE_CONCURRENCY=20
EMAIL_CONCURRENCY=20
NOTIFICATION_CONCURRENCY=20

# Rate Limiting - Production (High Volume)
HIGH_VOLUME_RATE_LIMIT=1000
RATE_LIMIT_MAX=500

# CORS - Production
CORS_ORIGIN=https://api.yourdomain.com,https://yourdomain.com

# Logging - Production
LOG_LEVEL=warn
LOG_FORMAT=json

# Monitoring - Production
MONITORING_ENABLED=true
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
