# Staging Environment Configuration Template
# Copy this file to .env and update the values

NODE_ENV=staging
PORT=3000

# Database - Staging
DATABASE_URL=postgresql://sfuser_staging:your_staging_password@localhost:5432/sfapi_staging
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=sfuser_staging
DB_PASSWORD=your_staging_password
DB_DATABASE=sfapi_staging

# Redis - Staging
REDIS_URL=redis://localhost:6379/1
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=1

# JWT - Staging
JWT_SECRET=staging-jwt-secret-key-change-in-production
JWT_EXPIRES_IN=24h

# Salesforce API - Staging (Sandbox/Test)
SF_BASE_ENDPOINT=https://test.salesforce.com
SF_CLIENT_ID=your_staging_client_id
SF_CLIENT_SECRET=your_staging_client_secret
SF_RESOURCE_API=https://test.salesforce.com/services/data/v58.0
SF_TOKEN_URL=https://test.salesforce.com/services/oauth2/token
SF_SUBSCRIPTION_KEY=your_staging_subscription_key
SF_SUBSCRIPTION_PAYMENT_KEY=your_staging_payment_key

# Queue Configuration - Staging
QUEUE_NAME=sf-queue-staging
SALESFORCE_CONCURRENCY=5
EMAIL_CONCURRENCY=5
NOTIFICATION_CONCURRENCY=5

# Rate Limiting - Staging
HIGH_VOLUME_RATE_LIMIT=500
RATE_LIMIT_MAX=200

# CORS - Staging
CORS_ORIGIN=https://staging-api.yourdomain.com,https://staging.yourdomain.com

# Logging - Staging
LOG_LEVEL=info
LOG_FORMAT=json

# Monitoring - Staging
MONITORING_ENABLED=true
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
